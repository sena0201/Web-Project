@model _20T1020413.DomainModels.UserAccount
@{
    ViewBag.Title = null;
}

<div class="box box-primary">
    <div class="box-body">

        <form class="form-horizontal" action="~/Account/ChangePassword" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m=>m.UserId)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên đăng nhập:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu cũ:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Xác nhận</button>
                    <a href="~/Home" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
