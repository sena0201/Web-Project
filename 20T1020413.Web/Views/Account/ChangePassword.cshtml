@{ ViewBag.Title = "Đổi mật khẩu"; }

<div class="box box-primary">
    <div class="box-body">
        <form id="form-change-password" class="form-horizontal" action="~/Account/ChangePassword" method="post">
            @Html.AntiForgeryToken()
            @{ var userAccount = Converter.CookieToUserAccount(User.Identity.Name); }

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    <input type="email"
                           class="form-control"
                           id="userName"
                           name="userName"
                           value="@userAccount.UserName"
                           placeholder="" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mật khẩu cũ:</label>
                <div class="col-sm-10">
                    <input type="password"
                           class="form-control"
                           id="oldPassword"
                           name="oldPassword"
                           placeholder="" autofocus>
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 0;">
                <label class="control-label col-sm-2" for="email">Mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="password"
                           class="form-control"
                           id="newPassword"
                           name="newPassword"
                           placeholder="" autofocus>
                </div>
            </div>
            <div class="col-xs-8" style="width:100%;margin-top: 10px; margin-bottom: 10px;margin-left:16%;">
                @Html.ValidationMessage("", "", new { @class = "text-danger" })
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="submit-btn" type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                    <a href="~/Home" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
