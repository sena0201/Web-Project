@model _20T1020413.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ShipperID)
            @*<input type="hidden" name="ShipperID" value="@Model.ShipperID" />*@
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên giao hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#f00;" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00;" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Lưu dữ liệu</button>
                    <a href="~/Shipper" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
