@model _20T1020413.Web.Models.SupplierSearchOutput
@{
    Layout = null;
}

<p style="margin-left: 5px; margin-top: 10px;">Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> bản ghi trong tổng số <strong>@string.Format("{0:N0}", Model.PageSize)</strong> trang</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Tên nhà cung cấp</th>
            <th>Tên giao dịch</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Thành phố</th>
            <th>Quốc gia</th>
            <th>Mã bưu chính</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.SupplierName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Country</td>
                <td>@item.City</td>
                <td>@item.PostalCode</td>
                <td class="text-right" style="width: 120px;">
                    <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-success">
                        <i class="glyphicon glyphicon-edit" title="Sửa"></i>
                    </a>
                    <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash" title="Xóa"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>

